<ul class="breadcrumb">

        <li><%=link_to "Setting",admin_setting_path%></li>

        <li class="active">Group List</li>

    </ul>

<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-sm-3" style="float:left;margin-left:10px;">
      <%=form_tag groups_path,:method=>"get" do %>
      <%=text_field_tag :search,params[:search],:placeholder=>"Group Name"%>
     <%=submit_tag "Search",:name=>nil,:class => "btn btn-warning btn-mini", "data-disable-with"=> "Just a moment..."%>
      <%end%>
    </div>
    <div class="col-xs-2" style="float:left;margin-left:700px;">
    <%= link_to 'New Group', new_group_path,class: "btn btn-success" %>
    </div>
  </div>

 <hr></hr>

<table class="table">
  <thead>
    <tr>
      <th>Group name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.group_name %></td>
        <td><%= link_to 'Edit', edit_group_path(group),class: "btn btn-success"%></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


