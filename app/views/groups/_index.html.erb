<p id="notice"><%= notice %></p>
<div class="row">
    <div class="col-sm-3" style="float:left;margin-left:10px;">
    <button type="button" class="btn btn-info">
      <span class="glyphicon glyphicon-search"></span> Search
    </button>
    <input type="text" placeholder="Enter Employee code">
    </div>
    <div class="col-sm-3" style="float:left;margin-left:700px;">
    <%= link_to 'Add New Group', new_group_path,class: "btn btn-success",:remote=>true %>
    </div>
  </div>
  
  
<table class="table">
  <thead>
    <tr>
      <th>Group name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.group_name %></td>
        <td><%= link_to 'Edit', edit_group_path(group),class: "btn btn-success" ,:remote=> true %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" ,:remote=>true%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


